@model EatWellAssistant.Models.Entities.Users
@{
    ViewData["Title"] = "Login / Register";
}
<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white"></span>
                    <h1 class="text-capitalize mb-5 text-lg">Đăng nhập / Đăng ký</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-form-wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center">
                    <h2 class="text-md mb-2" id="text">Đăng nhập</h2>
                </div>
            </div>
        </div>
        <div class="row feature-item" id="login">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @using (Html.BeginForm("doLogin", "Authentication", FormMethod.Post, new
                {
                }))
                {
                    <div class="form-group-2 mb-4">
                        @Html.TextBoxFor(item => item.email, new { type = "email", @class = "form-control", placeholder = "Your Email Address", required = "required" })
                    </div>
                    <div class="form-group-2 mb-4">
                        @Html.PasswordFor(item => item.password, new { @class = "form-control", placeholder = "Your password", required = "required" })
                    </div>

                    <div class="text-center">
                        <button class="btn btn-main btn-round-full" type="submit">Đăng nhập</button>
                    </div>
                    <div class="text-center">
                        <a href="#signup" id="btnRegister" class="btn-link">Đăng ký</a>
                    </div>
                }
            </div>
        </div>
        <div class="row feature-item d-none" id="signup">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @using (Html.BeginForm("doSignUp", "Authentication", FormMethod.Post, new
                {
                }))
                {
                    <div class="form-group-2 mb-4">
                        @Html.TextBoxFor(item => item.email, new { type = "email", @class = "form-control", placeholder = "Your Email Address", required = "required" })
                    </div>
                    <div class="form-group-2 mb-4">
                        @Html.PasswordFor(item => item.password, new { @class = "form-control", placeholder = "Your password", required= "required" })
                    </div>
                    <div class="form-group-2 mb-4">
                        @Html.TextBoxFor(item => item.fullName, new { @class = "form-control", placeholder = "Your name", required = "required" })
                    </div>

                    <div class="text-center">
                        <input class="btn btn-main btn-round-full" name="register" type="submit" value="Đăng ký">
                    </div>
                    <div class="text-center">
                        <a href="#login" id="btnLogin" class="btn-link">Đăng nhập</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@if (ViewData["Msg"] != null)
{
    <script>
        alert('@ViewData["Msg"]');
    </script>
    ViewData["Msg"] = null;
}

<script>

    const containerLogin = document.getElementById('login');
    const containerRegister = document.getElementById('signup');
    const btnRegister = document.getElementById('btnRegister');
    const btnLogin = document.getElementById('btnLogin');
    const text = document.getElementById('text');
    btnRegister.addEventListener('click', function () {
        containerLogin.classList.add('d-none');
        containerRegister.classList.remove('d-none');
        text.innerText = 'Đăng ký';
    });
    btnLogin.addEventListener('click', function () {
        containerLogin.classList.remove('d-none');
        containerRegister.classList.add('d-none');
        text.innerText = 'Đăng nhập';
    });
</script>