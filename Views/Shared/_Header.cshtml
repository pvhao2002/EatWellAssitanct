@{
    var userId = Context.Request.Cookies["UserId"];
}
<header>
    <div class="header-top-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <ul class="top-bar-info list-inline-item pl-0 mb-0">
                        <li class="list-inline-item"><i class="icofont-location-pin mr-2"></i>HoChiMinhCity, Vietnam</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="text-lg-right top-right-bar mt-2 mt-lg-0">
                        <a href="tel:+23-345-67890">
                            <span>Liên hệ ngay : </span>
                            <span class="h4">0703926856</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navigation" id="navbar">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="/client/images/logo.png" alt="" class="img-fluid">
            </a>

            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarmain" aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="icofont-navigation-menu"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarmain">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Material")">Kho Thực Phẩm</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "PlanMeal")">Dịch vụ</a></li>
                    @if (!string.IsNullOrEmpty(userId))
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Cart")">Giỏ hàng</a></li>
                    }

                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "About")">Giới thiệu</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Contact")">Liên hệ</a>
                    </li>
                    @if (string.IsNullOrEmpty(userId))
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Authentication")">Đăng nhập</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Authentication")">Đăng xuất</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>