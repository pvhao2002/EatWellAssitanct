@model EatWellAssistant.Models.FoodViewModel
@{
    ViewData["Title"] = "Add Food";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thêm mới sản phẩm</h4>
            <p class="card-description"> Nhập thông tin sản phẩm </p>
            @using (Html.BeginForm("doAdd", "Food", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "forms-sample" }))
            {
                @Html.HiddenFor(item => item.food.foodId)
                <div class="form-group">
                    <label for="exampleInputName1">Tên sản phẩm</label>
                    @Html.TextBoxFor(m => m.food.foodName, new { required = "required", @class = "form-control", placeholder = "Tên sản phẩm" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPrice">Số lượng calo trên 100g</label>
                    @Html.TextBoxFor(m => m.food.caloriesPerGram, new { required = "required", @class = "form-control", type = "number", placeholder = "Calo" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPrice">Hàm lượng chất đạm</label>
                    @Html.TextBoxFor(m => m.food.protein, new { required = "required", @class = "form-control", type = "number", placeholder = "Protein" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPrice">Hàm lượng tinh bột</label>
                    @Html.TextBoxFor(m => m.food.carbs, new { required = "required", @class = "form-control", type = "number", placeholder = "Carb" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPrice">Hàm lượng chất béo</label>
                    @Html.TextBoxFor(m => m.food.fat, new { required = "required", @class = "form-control", type = "number", placeholder = "Fat" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPrice">Hàm lượng độ cồn</label>
                    @Html.TextBoxFor(m => m.food.alcohol, new { required = "required", @class = "form-control", type = "number", placeholder = "Alcohol" })
                </div>

                <div class="form-group">
                    <label for="exampleSelectGender">Loại sản phẩm</label>
                    <select class="form-control" id="exampleSelectGender" name="cate" required>
                        <option value=''>Chọn thể loại</option>
                        @foreach (var cate in Model.categories)
                        {
                            <option value='@cate.categoryId'>@cate.categoryName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Hình ảnh</label>
                    <input type="file" name="img" class="file-upload-default" required>
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Tải ảnh lên">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Tải lên</button>
                        </span>
                    </div>
                </div>
                <input type="submit" class="btn btn-gradient-primary me-2" name="add" value="Sửa">
            }
        </div>
    </div>
</div>